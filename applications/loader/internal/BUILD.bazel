load("@io_bazel_rules_go//go:def.bzl", "go_binary", "go_library")
load("@io_bazel_rules_docker//go:image.bzl", "go_image")
load("@io_bazel_rules_docker//container:container.bzl", "container_push")

DEPENDENCIES = ["//applications/loader/database:files"] + ["//applications/loader:config.toml"]

go_library(
    name = "internal_lib",
    srcs = ["main.go"],
    data = DEPENDENCIES,
    importpath = "overdoll/applications/loader/internal",
    visibility = ["//visibility:private"],
    deps = [
        "//applications/loader/internal/ports",
        "//applications/loader/internal/service",
        "//applications/loader/proto:v1_go_proto",
        "//libraries/bootstrap",
        "//libraries/clients",
        "//libraries/commands",
        "//libraries/config",
        "@com_github_spf13_cobra//:cobra",
        "@org_golang_google_grpc//:go_default_library",
    ],
)

go_binary(
    name = "internal",
    embed = [":internal_lib"],
    visibility = ["//applications/loader:__subpackages__"],
)

go_image(
    name = "local-image",
    base = "@go_ffmpeg_image//image",
    data = ["//applications/loader:.env"] + DEPENDENCIES,
    embed = [":internal_lib"],
    importpath = "overdoll/applications/loader",
)

go_image(
    name = "image",
    base = "@go_ffmpeg_image//image",
    data = DEPENDENCIES,
    embed = [":internal_lib"],
    importpath = "overdoll/applications/loader",
)

container_push(
    name = "publish-testing",
    format = "Docker",
    image = ":image",
    registry = "$(CONTAINER_REGISTRY)",
    repository = "loader/dev",
    tag = "$(CONTAINER_TAG)",
)

container_push(
    name = "publish",
    format = "Docker",
    image = ":image",
    registry = "$(CONTAINER_REGISTRY)",
    repository = "loader",
    skip_unchanged_digest = True,
    tag = "$(CONTAINER_TAG)",
)
