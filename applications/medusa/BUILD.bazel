TEST_DEPS = [
    "jest.setup.js",
    "jest.config.js",
    "chdir.js",
] + glob(
    [
        "src/__generated__/*",
        ".*",
    ],
    exclude = _EXCLUDE,
) + _RUNTIME_DEPS + [
    "@npm//@testing-library/react",
    "@npm//babel-jest",
    "@npm//relay-test-utils",
    "@npm//jest-environment-jsdom-sixteen",
