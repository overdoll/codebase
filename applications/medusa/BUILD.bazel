    "@npm//identity-obj-proxy",
]

_SERVER_DEPS = []

copy_to_bin(
    name = "copy_static_files",
    srcs = _SRC,
)

write_file(
    name = "write_chdir_script",
    out = "chdir.js",
    content = ["process.chdir(__dirname)"],
)

jest_test(
    name = "unit",
    srcs = glob(
        [
            "src/client/**/*",
            "src/modules/**/*",
        ],
    ),
    file_extension = ".uspec.js",
    jest_config = "jest.config.js",
    deps = TEST_DEPS,
)

jest_test(
    name = "integration",
    srcs = glob(
        [
            "src/client/**/*",
            "src/modules/**/*",
        ],
    ),
    file_extension = ".ispec.js",
    jest_config = "jest.config.js",
    deps = TEST_DEPS,
)

razzle(
    name = "bundle",
    outs = [
        "build/assets.json",
        "build/loadable-stats.json",
        "build/public",
        "build/server.js",
    ],
    args = [
        "--node_options=--require=./$(location chdir.js)",
        "build",
        "--noninteractive",
    ],
    data = [
        "copy_static_files",
        "chdir.js",
    ] + _RUNTIME_DEPS,
)

nodejs_binary(
    name = "medusa-production",
    data = [
        "chdir.js",
        ":bundle",
    ] + glob([
        "src/server/templates/**",
        "src/server/locales/**/*",
        "public/**/*",
    ]) + _SERVER_DEPS,
    entry_point = "build/server.js",
    templated_args = [
        "--node_options=--require=./$(rootpath chdir.js)",
    ],
)

nodejs_image(
    name = "medusa-production-image",
    binary = ":medusa-production",
    env = {
        "NODE_ENV": "production",
        "PORT": "8080",
    },
)

container_push(
    name = "publish-testing",
    format = "Docker",
    image = ":medusa-production-image",
    registry = "$(CONTAINER_REGISTRY)",
    repository = "medusa/dev",
    tag = "$(CONTAINER_TAG)",
)

container_push(
    name = "publish",
    format = "Docker",
    image = ":medusa-production-image",
    registry = "$(CONTAINER_REGISTRY)",
    repository = "medusa",
    skip_unchanged_digest = True,
    tag = "$(CONTAINER_TAG)",
)
