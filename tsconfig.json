{
  "compilerOptions": {
    "baseUrl": "./",
    "sourceMap": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "Node",
    "lib": [
      "dom",
      "dom.iterable",
      "ESNext",
      "ES6"
    ],
    "allowJs": false,
    "checkJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": [
      "react-dom/next",
      "react/next",
      "webpack-env",
      "jest"
    ],
    "paths": {
      "@//:modules/*": [
        "applications/medusa/src/modules/*"
      ],
      "@//:artifacts/*": [
        "applications/medusa/src/__generated__/*"
      ],
      "@//:types/*": [
        "applications/medusa/src/types/*"
      ],
      "@//:assets/*": [
        "applications/medusa/src/assets/*"
      ]
    }
  },
  "include": [
    "./applications/medusa/**/*",
    "./applications/orca/apollo-gateway.ts"
  ],
  "exclude": [
    "./applications/medusa/.nyc_output",
    "./applications/medusa/build",
    "./applications/medusa/coverage",
    "./applications/medusa/cache",
    "./applications/medusa/cypress",
    "node_modules",
    "**/__locale/**/*.ts"
  ]
}
